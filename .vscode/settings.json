// Place your settings in this file to overwrite default and user settings.
{
    "editor.fontSize": 14,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.map": {
            "when": "$(basename).ts"
        },
        "**/*.css": true
    },

    "editor.formatOnSave": true,
    "files.insertFinalNewline": true,
    "html.format.wrapLineLength": 80,


    "tslint.enable": true,
    "tslint.run": "onType"
}
